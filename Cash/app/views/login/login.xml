<Page
    loaded="loaded" actionBarHidden="true" class="fullscreen">
    <StackLayout orientation="vertical" class="form">
        <StackLayout orientation="horizontal" horizontalAlignment="center" class="logos">
            <Image src="~/images/logo_green_eat.png" stretch="aspectFill" />
            <Image src="~/images/logo_inside.png" stretch="aspectFill" />
            <Image src="~/images/logo_tea.png" stretch="aspectFill" />
        </StackLayout>
        <Label text="USUARIO" textWrap="true" />
        <TextField id="username" text="{{ username }}" keyboardType="email" autocorrect="false" autocapitalizationType="none" />
        <Label text="PASSWORD" textWrap="true" />
        <TextField id="password" secure="true" text="{{ password }}" />
        <Button text="INGRESAR" tap="signIn"></Button>
    </StackLayout>
</Page>